[user]
	name = Kshitij Gaipal
[core]
	editor = emacsclient
	excludesfile = ~/.gitignore_global
	whitespace = trailing-space
	fscache = true
	preloadindex = true
[alias]
	co = checkout
	last = log -1 HEAD
	unstage = reset HEAD --
        new = "!git checkout -b $1;"
        sw = "!git checkout $1; git pull; git remote prune origin;"

        # prune local and remote branches
        # https://stackoverflow.com/a/3670560
	pruneremote = remote prune origin
        prunelocal = "!git branch --color=never | cut -c3- | egrep -v '(dev|develop|master)'|xargs git branch -D"

	# https://www.georgebrock.com/blog/useful-git-aliases/
	graph = log --no-color --all --graph --decorate --oneline -n30
[push]
	default = simple
[color]
	branch = always
	grep = always
	status = always
[grep]
	lineNumber = true
[log]
	follow = true
	decorate = true
[credential "https://kgaipal.visualstudio.com/"]
	helper = store
[credential "https://microsoft.visualstudio.com/"]
	helper = store
[credential "https://github.com/"]
	helper = store
[gc]
	auto = 256

# for boosting performance on windows especially for magit
# https://magit.vc/manual/magit/Microsoft-Windows-Performance.html#Microsoft-Windows-Performance
