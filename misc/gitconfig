[user]
	name = Kshitij Gaipal
[core]
	editor = emacsclient
	excludesfile = ~/.gitignore_global
	whitespace = trailing-space
[alias]
	co = checkout
	last = log -1 HEAD
	unstage = reset HEAD --
	clb = remote prune origin

	# https://www.georgebrock.com/blog/useful-git-aliases/
	graph = log --all --graph --decorate --oneline -n30
[push]
	default = simple
[color]
	branch = always
	grep = always
	status = always
[grep]
	lineNumber = true
[log]
	follow = true
	decorate = true
